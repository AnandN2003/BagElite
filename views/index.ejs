<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BagElite</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="font-['helvetica_now_display']">

<!-- Fixed Header -->
<div class="fixed top-0 mt-4 mb-5 left-1/2 -translate-x-1/2 bg-gradient-to-r from-blue-500 to-purple-500 text-white px-6 py-2 rounded-b-md shadow-lg z-50">
    <h1 class="text-3xl font-bold tracking-wide">BagElite</h1>
</div>

<!-- Error Message -->
<% if(error.length > 0){ %>
    <div class="absolute top-16 left-1/2 -translate-x-1/2 p-3 rounded-md bg-red-500 animate-bounce z-50">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= error %>
        </span>
    </div>
<% } %>

<div class="w-full  min-h-screen p-20 flex relative bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900">
    <!-- User Section -->
    <div class="w-1/2 px-10 mr-5 rounded-2xl py-8 portal-container bg-gradient-to-br from-blue-50 via-white to-blue-100">
        <div class="text-center mb-8 glass-effect p-4 rounded-lg shadow-lg">
            <h2 class="text-3xl font-bold text-blue-600">User Portal</h2>
        </div>
        <div class="flex flex-col space-y-8">
            <!-- User Create Account Section -->
            <div class="w-full flex items-center justify-center">
                <div class="w-full px-12 transform transition-all duration-500 hover:scale-105">
                    <h3 class="text-2xl mb-2">Welcome to <span class="text-blue-500 font-semibold relative inline-block after:content-[''] after:absolute after:-bottom-1 after:left-0 after:w-full after:h-0.5 after:bg-blue-500 after:transform after:scale-x-0 after:transition-transform after:duration-300 hover:after:scale-x-100">BagElite</span></h3>
                    <h4 class="text-xl mb-6 text-gray-700">Create User Account</h4>
                    <form autocomplete="off" action="/users/register" method="post" class="space-y-4">
                        <input class="bg-white block w-full px-4 py-3 border-2 rounded-lg mb-3 border-gray-200 transition-all duration-300 focus:border-blue-400 focus:ring-2 focus:ring-blue-200 focus:outline-none transform hover:translate-x-1" type="text" placeholder="Full Name" name="fullname">
                        <input class="bg-white block w-full px-4 py-3 border-2 rounded-lg mb-3 border-gray-200 transition-all duration-300 focus:border-blue-400 focus:ring-2 focus:ring-blue-200 focus:outline-none transform hover:translate-x-1" type="email" placeholder="Email" name="email">
                        <input class="bg-white block w-full px-4 py-3 border-2 rounded-lg mb-3 border-gray-200 transition-all duration-300 focus:border-blue-400 focus:ring-2 focus:ring-blue-200 focus:outline-none transform hover:translate-x-1" type="password" placeholder="Password" name="password">
                        <input class="px-8 rounded-lg py-3 mt-4 bg-blue-500 text-white cursor-pointer transition-all duration-300 hover:bg-blue-600 hover:shadow-lg transform hover:-translate-y-1 active:translate-y-0" type="submit" value="Create User Account">
                    </form>
                </div>
            </div>

            <!-- Animated Circle with "or" -->
            <div class="flex justify-center">
                <div class="w-16 h-16 rounded-full border-4 border-blue-400 flex items-center justify-center text-blue-400 text-xl font-semibold bg-white shadow-lg animate-pulse hover:animate-none hover:scale-110 transition-transform duration-300">
                    or
                </div>
            </div>

            <!-- User Login Section -->
            <div class="w-full flex items-center justify-center">
                <div class="w-full px-12 transform transition-all duration-500 hover:scale-105">
                    <h4 class="text-xl mb-6 text-gray-700">Login to User Account</h4>
                    <form autocomplete="off" action="/users/login" method="post" class="space-y-4">
                        <input class="block bg-white w-full px-4 py-3 border-2 rounded-lg mb-3 border-gray-200 transition-all duration-300 focus:border-blue-400 focus:ring-2 focus:ring-blue-200 focus:outline-none transform hover:translate-x-1" type="email" placeholder="Email" name="email">
                        <input class="block bg-white w-full px-4 py-3 border-2 rounded-lg mb-3 border-gray-200 transition-all duration-300 focus:border-blue-400 focus:ring-2 focus:ring-blue-200 focus:outline-none transform hover:translate-x-1" type="password" placeholder="Password" name="password">
                        <input class="px-8 block rounded-lg py-3 mt-4 bg-blue-500 text-white cursor-pointer transition-all duration-300 hover:bg-blue-600 hover:shadow-lg transform hover:-translate-y-1 active:translate-y-0" type="submit" value="User Login">
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="animated-divider"></div>

    <!-- Admin Section -->
    <div class="w-1/2 px-10 rounded-2xl py-8 bg-gradient-to-br from-gray-50 to-purple-50">
        <div class="text-center mb-8">
            <h2 class="text-3xl font-bold text-purple-600">Admin Portal</h2>
        </div>
        <div class="flex flex-col space-y-8">
            <!-- Admin Create Account Section -->
            <div class="w-full flex items-center justify-center">
                <div class="w-full px-12 transform transition-all duration-500 hover:scale-105">
                    <h3 class="text-2xl mb-2">Welcome to <span class="text-purple-500 font-semibold relative inline-block after:content-[''] after:absolute after:-bottom-1 after:left-0 after:w-full after:h-0.5 after:bg-purple-500 after:transform after:scale-x-0 after:transition-transform after:duration-300 hover:after:scale-x-100">BagElite</span></h3>
                    <h4 class="text-xl mb-6 text-gray-700">Create Admin Account</h4>
                    <form autocomplete="off" action="/owners/create" method="post" class="space-y-4">
                        <input class="bg-white block w-full px-4 py-3 border-2 rounded-lg mb-3 border-gray-200 transition-all duration-300 focus:border-purple-400 focus:ring-2 focus:ring-purple-200 focus:outline-none transform hover:translate-x-1" type="text" placeholder="Full Name" name="fullname">
                        <input class="bg-white block w-full px-4 py-3 border-2 rounded-lg mb-3 border-gray-200 transition-all duration-300 focus:border-purple-400 focus:ring-2 focus:ring-purple-200 focus:outline-none transform hover:translate-x-1" type="email" placeholder="Email" name="email">
                        <input class="bg-white block w-full px-4 py-3 border-2 rounded-lg mb-3 border-gray-200 transition-all duration-300 focus:border-purple-400 focus:ring-2 focus:ring-purple-200 focus:outline-none transform hover:translate-x-1" type="password" placeholder="Password" name="password">
                        <input class="px-8 rounded-lg py-3 mt-4 bg-purple-500 text-white cursor-pointer transition-all duration-300 hover:bg-purple-600 hover:shadow-lg transform hover:-translate-y-1 active:translate-y-0" type="submit" value="Create Admin Account">
                    </form>
                </div>
            </div>

            <!-- Animated Circle with "or" -->
            <div class="flex justify-center">
                <div class="w-16 h-16 rounded-full border-4 border-purple-400 flex items-center justify-center text-purple-400 text-xl font-semibold bg-white shadow-lg animate-pulse hover:animate-none hover:scale-110 transition-transform duration-300">
                    or
                </div>
            </div>

            <!-- Admin Login Section -->
            <div class="w-full flex items-center justify-center">
                <div class="w-full px-12 transform transition-all duration-500 hover:scale-105">
                    <h4 class="text-xl mb-6 text-gray-700">Login to Admin Account</h4>
                    <form autocomplete="off" action="/owners/login" method="post" class="space-y-4">
                        <input class="block bg-white w-full px-4 py-3 border-2 rounded-lg mb-3 border-gray-200 transition-all duration-300 focus:border-purple-400 focus:ring-2 focus:ring-purple-200 focus:outline-none transform hover:translate-x-1" type="email" placeholder="Email" name="email">
                        <input class="block bg-white w-full px-4 py-3 border-2 rounded-lg mb-3 border-gray-200 transition-all duration-300 focus:border-purple-400 focus:ring-2 focus:ring-purple-200 focus:outline-none transform hover:translate-x-1" type="password" placeholder="Password" name="password">
                        <input class="px-8 block rounded-lg py-3 mt-4 bg-purple-500 text-white cursor-pointer transition-all duration-300 hover:bg-purple-600 hover:shadow-lg transform hover:-translate-y-1 active:translate-y-0" type="submit" value="Admin Login">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('./partials/footer') %>
