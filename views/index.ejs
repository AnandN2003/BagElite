<%- include('./partials/header') %>

<% if(error.length > 0){ %>
    <div class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-red-500 animate-bounce">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= error %>
        </span>
    </div>
<% } %>

<div class="w-full h-screen flex px-20 bg-gradient-to-br from-gray-50 to-blue-50">
    <!-- Create Account Section -->
    <div class="w-1/2 flex items-center justify-center h-screen">
        <div class="w-full px-32 transform transition-all duration-500 hover:scale-105">
            <h3 class="text-4xl mb-2">Welcome to <span class="text-blue-500 font-semibold relative inline-block after:content-[''] after:absolute after:-bottom-1 after:left-0 after:w-full after:h-0.5 after:bg-blue-500 after:transform after:scale-x-0 after:transition-transform after:duration-300 hover:after:scale-x-100">BagElite</span></h3>
            <h4 class="text-2xl mb-8 text-gray-700">Create your account</h4>
            <form autocomplete="off" action="/users/register" method="post" class="space-y-4">
                <input class="bg-white block w-full px-4 py-3 border-2 rounded-lg mb-3 border-gray-200 transition-all duration-300 focus:border-blue-400 focus:ring-2 focus:ring-blue-200 focus:outline-none transform hover:translate-x-1" type="text" placeholder="Full Name" name="fullname">
                <input class="bg-white block w-full px-4 py-3 border-2 rounded-lg mb-3 border-gray-200 transition-all duration-300 focus:border-blue-400 focus:ring-2 focus:ring-blue-200 focus:outline-none transform hover:translate-x-1" type="email" placeholder="Email" name="email">
                <input class="bg-white block w-full px-4 py-3 border-2 rounded-lg mb-3 border-gray-200 transition-all duration-300 focus:border-blue-400 focus:ring-2 focus:ring-blue-200 focus:outline-none transform hover:translate-x-1" type="password" placeholder="Password" name="password">
                <input class="px-8 rounded-lg py-3 mt-4 bg-blue-500 text-white cursor-pointer transition-all duration-300 hover:bg-blue-600 hover:shadow-lg transform hover:-translate-y-1 active:translate-y-0" type="submit" value="Create My Account">
            </form>
        </div>
    </div>

    <!-- Animated Circle with "or" -->
    <div class="w-1/12 flex items-center justify-center h-screen">
        <div class="w-20 h-20 rounded-full border-4 border-blue-400 flex items-center justify-center text-blue-400 text-xl font-semibold bg-white shadow-lg animate-pulse hover:animate-none hover:scale-110 transition-transform duration-300">
            or
        </div>
    </div>

    <!-- Login Account Section -->
    <div class="w-1/2 flex items-center justify-center h-screen">
        <div class="w-full px-32 transform transition-all duration-500 hover:scale-105">
            <h4 class="text-2xl capitalize mb-8 text-gray-700">Login to your account</h4>
            <form autocomplete="off" action="/users/login" method="post" class="space-y-4">
                <input class="block bg-white w-full px-4 py-3 border-2 rounded-lg mb-3 border-gray-200 transition-all duration-300 focus:border-blue-400 focus:ring-2 focus:ring-blue-200 focus:outline-none transform hover:translate-x-1" type="email" placeholder="Email" name="email">
                <input class="block bg-white w-full px-4 py-3 border-2 rounded-lg mb-3 border-gray-200 transition-all duration-300 focus:border-blue-400 focus:ring-2 focus:ring-blue-200 focus:outline-none transform hover:translate-x-1" type="password" placeholder="Password" name="password">
                <input class="px-8 block rounded-lg py-3 mt-4 bg-blue-500 text-white cursor-pointer transition-all duration-300 hover:bg-blue-600 hover:shadow-lg transform hover:-translate-y-1 active:translate-y-0" type="submit" value="Login">
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>